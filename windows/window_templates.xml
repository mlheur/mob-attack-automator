<?xml version="1.0" encoding="iso-8859-1"?>
<root>

    <template name="MAA_subwindow">
        <subwindow>
            <frame name="groupbox" />
            <anchored to="contentanchor">
                <size width="200" height="350" />
            </anchored>
            <activate />
            <fastinit />
            <script>function onInit() MAA.initSubwindow(self,window) end</script>
        </subwindow>
    </template>

    <template name="MAA_subheader">
        <label name="header">
            <frame name="headersimple" />
            <anchored to="contentanchor">
                <top relation="relative" />
                <left />
                <right />
            </anchored>
            <activate />
            <fastinit />
            <center />
        </label>
    </template>

    <template name="MAA_portrait">
        <tokenfield name="token">
            <anchored to="contentanchor">
                <top relation="relative" />
                <left />
                <right />
                <size height="128" />
            </anchored>
            <activate />
            <fastinit />
            <datasource>.tokenref</datasource>
        </tokenfield>
    </template>

    <template name="MAA_name">
        <stringc_static name="name">
            <anchored to="contentanchor">
                <top relation="relative" />
                <left />
                <right />
                <size height="30" />
            </anchored>
            <activate />
            <fastinit />
            <center />
            <datasource>.name</datasource>
        </stringc_static>
    </template>

</root>