<?xml version="1.0" encoding="iso-8859-1"?>
<root>

    <template name="MAA_subwindow">
        <subwindow>
            <frame name="groupbox" />
            <anchored to="contentanchor">
                <size width="140" height="192" />
            </anchored>
            <activate />
            <fastinit />
            <script>function onInit() MAA.initSubwindow(self,window) end</script>
        </subwindow>
    </template>

    <template name="MAA_subheader">
        <label name="header">
            <frame name="headersimple" />
            <anchored to="contentanchor">
                <top relation="relative" />
                <left />
                <right />
                <size height="20" />
            </anchored>
            <activate />
            <fastinit />
            <center />
        </label>
    </template>

    <template name="MAA_portrait">
        <tokenfield name="token">
            <anchored to="contentanchor">
                <top relation="relative" />
                <left />
                <right />
                <size height="96" />
            </anchored>
            <activate />
            <fastinit />
            <datasource>.tokenref</datasource>
        </tokenfield>
    </template>

    <template name="MAA_name">
        <string_static name="name">
            <anchored to="contentanchor">
                <top relation="relative" />
                <left offset="3" />
                <right offset="-3" />
                <size height="20" />
            </anchored>
            <activate />
            <fastinit />
            <center />
			<controlline />
            <readonly />
            <datasource>.name</datasource>
        </string_static>
    </template>

</root>