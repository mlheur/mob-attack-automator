<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="MAA">
		<frame>utilitybox</frame>
		<sizelimits>
			<minimum width="480" height="410" />
			<dynamic />
		</sizelimits>
		<placement>
			<size width="480" height="410" />
			<nosave />
		</placement>
		<windowmenu>
			<nolink />
		</windowmenu>
		<sheetdata>
			<anchor_content_utilitybox_top />
			<anchor_content_utilitybox_bottom />
			<MAA_subwindow_actor name="attacker">
				<class>MAA_attacker</class>
			</MAA_subwindow_actor>
			<MAA_subwindow_actor name="target">
				<class>MAA_target</class>
			</MAA_subwindow_actor>
			<MAA_button_roll name="btn_mobattack" />
			<resize />
			<subwindow name="instructions">
				<anchored to="contentanchor">
					<top /><left /><right />
					<bottom parent="bottomanchor" offset="-24" />
				</anchored>
				<hidden />
				<class>MAA_instructions</class>
			</subwindow>
			<windowtitlebar_utilitybox name="title" />
			<windowmenubar_utilitybox name="menubar" />
		</sheetdata>
		<script>
			function onInit()
				MAA.hWnd_onInit(self)
			end
			function onClose()
				MAA.hWnd_onClose()
			end
		</script>
	</windowclass>

	<windowclass name="MAA_attacker">
		<sheetdata>
			<anchor_content_groupbox_top />
			<anchor_content_groupbox_bottom />
			<MAA_subtitle>
				<static textres="MAA_label_attacker" />
			</MAA_subtitle>
			<MAA_button_refresh />
			<MAA_groupbox_inner />
			<MAA_portrait />
			<MAA_name />
			<MAA_number name="atk">
				<anchored>
					<top parent="inneranchor" anchor="bottom" />
				</anchored>
				<displaysign />
			</MAA_number>
			<MAA_number_label>
				<anchored to="atk" />
				<static textres="MAA_atk_label" />
			</MAA_number_label>
			<MAA_number name="qty">
				<anchored>
					<top parent="atk" anchor="bottom" offset="4"/>
				</anchored>
				<datasource>MAA.mobsize</datasource>
			</MAA_number>
			<MAA_number_label>
				<anchored to="qty" />
				<static textres="MAA_qty_label" />
			</MAA_number_label>
			<MAA_action_cycler />
		</sheetdata>
	</windowclass>

	<windowclass name="MAA_target">
		<sheetdata>
			<anchor_content_groupbox_top />
			<anchor_content_groupbox_bottom />
			<MAA_subtitle>
				<static textres="MAA_label_target" />
			</MAA_subtitle>
			<MAA_button_refresh />
			<MAA_groupbox_inner />
			<MAA_portrait />
			<MAA_name />
			<MAA_number name="ac">
				<anchored>
					<top parent="inneranchor" anchor="bottom" />
				</anchored>
			</MAA_number>
			<MAA_number_label>
				<anchored to="ac" />
				<static textres="MAA_ac_label" />
			</MAA_number_label>
		</sheetdata>
	</windowclass>

	<windowclass name="MAA_action_cycler">
		<sheetdata>
			<anchor_content_top />
			<anchor_content_bottom />
			<MAA_button_cycler name="cycle_left">
				<anchored>
					<left />
				</anchored>
				<script>
					function onButtonPress()
						MAA.updateAttackAction(-1)
					end
				</script>
				<icon normal="arrow_sm_left" />
			</MAA_button_cycler>
			<MAA_button_cycler name="cycle_right">
				<anchored>
					<right />
				</anchored>
				<icon normal="arrow_sm_right" />
				<script>
					function onButtonPress()
						MAA.updateAttackAction(1)
					end
				</script>
			</MAA_button_cycler>
			<MAA_action_value />
		</sheetdata>
	</windowclass>

	<windowclass name="MAA_instructions">
		<frame name="groupbox" />
		<sheetdata>
			<anchor_content_top />
			<anchor_content_bottom />
			<formattedtextcontrol name="text">
				<font name="narratorfont" />
				<active />
				<fastinit />
				<static />
				<center />
				<nodrag />
				<nodrop />
				<anchored to="contentanchor">
					<top offset="24"/>
					<left offset="24"/>
					<right offset="-24"/>
					<bottom parent="bottomanchor" offset="-24" />
				</anchored>
				<script>
					function onInit()
						setValue(MAA.getInstructions())
					end
				</script>
			</formattedtextcontrol>
			<scrollbar_content_text />
		</sheetdata>
	</windowclass>

</root>