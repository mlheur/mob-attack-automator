<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="MAA">
		<frame>utilitybox</frame>
		<sizelimits>
			<minimum width="400" height="410" />
			<dynamic />
		</sizelimits>
		<placement>
			<size width="400" height="410" />
			<nosave />
		</placement>
		<windowmenu>
			<nolink />
		</windowmenu>
		<sheetdata>
			<windowtitlebar_utilitybox name="title" />
			<windowmenubar_utilitybox name="menubar" />
			<anchor_content_utilitybox_top />
			<anchor_content_utilitybox_bottom />
			<MAA_subwindow_actor name="attacker">
				<class>MAA_attacker</class>
			</MAA_subwindow_actor>
			<MAA_subwindow_actor name="target">
				<class>MAA_target</class>
			</MAA_subwindow_actor>
			<MAA_button_roll name="attack_roll" />
			<resize />
		</sheetdata>
		<script>
			function onInit()
				MAA.hWnd_onInit(self)
			end
			function onClose()
				MAA.onClose()
			end
		</script>
	</windowclass>

	<windowclass name="MAA_attacker">
		<sheetdata>
			<anchor_content_groupbox_top />
			<anchor_content_groupbox_bottom />
			<MAA_subtitle>
				<static textres="MAA_label_attacker" />
			</MAA_subtitle>
			<MAA_button_refresh />
			<MAA_groupbox_inner />
			<MAA_portrait />
			<MAA_name />
			<MAA_number_ro name="atk">
				<anchored>
					<top parent="inneranchor" anchor="bottom" />
				</anchored>
			</MAA_number_ro>
			<MAA_number_label>
				<anchored to="atk" />
				<static textres="MAA_atk_label" />
				<showsign />
			</MAA_number_label>
			<MAA_number name="qty">
				<anchored>
					<top parent="atk" anchor="bottom" offset="4"/>
				</anchored>
			</MAA_number>
			<MAA_number_label>
				<anchored to="qty" />
				<static textres="MAA_qty_label" />
			</MAA_number_label>
		</sheetdata>
	</windowclass>

	<windowclass name="MAA_target">
		<sheetdata>
			<anchor_content_groupbox_top />
			<anchor_content_groupbox_bottom />
			<MAA_subtitle>
				<static textres="MAA_label_target" />
			</MAA_subtitle>
			<MAA_button_refresh />
			<MAA_groupbox_inner />
			<MAA_portrait />
			<MAA_name />
			<MAA_number_ro name="ac">
				<anchored>
					<top parent="inneranchor" anchor="bottom" />
				</anchored>
			</MAA_number_ro>
			<MAA_number_label>
				<anchored to="ac" />
				<static textres="MAA_ac_label" />
			</MAA_number_label>
		</sheetdata>
	</windowclass>

</root>