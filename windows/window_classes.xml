<?xml version="1.0" encoding="iso-8859-1"?>
<root>

	<windowclass name="MAA">
		<frame>utilitybox</frame>
		<sizelimits>
			<!-- Height: 30(frametop) + 288(2xgroupbox) + 24(button) + 24(framebottom) -->
			<minimum width="400" height="410" />
			<dynamic />
		</sizelimits>
		<placement>
			<size width="400" height="410" />
			<nosave />
		</placement>
		<windowmenu>
			<nolink />
		</windowmenu>
		<sheetdata>
			<windowtitlebar_utilitybox name="title" />
			<windowmenubar_utilitybox name="menubar" />

			<anchor_content_utilitybox_top />
			<anchor_content_utilitybox_bottom />

			<MAA_groupbox name="MAA_attacker">
				<class>MAA_attacker</class>
			</MAA_groupbox>
			<MAA_groupbox name="MAA_target">
				<class>MAA_target</class>
			</MAA_groupbox>

			<MAA_button_roll name="MAA_button_roll" />

			<resize />
		</sheetdata>
		<script>
			function onInit()
				DB.deleteChildren(getDatabaseNode())
			end
		</script>
	</windowclass>

	<windowclass name="MAA_attacker">
		<sheetdata>
			<anchor_content_groupbox_top />
			<anchor_content_groupbox_bottom />
			<MAA_subtitle>
				<static textres="MAA_label_attacker" />
			</MAA_subtitle>
			<MAA_button_refresh />
			<MAA_groupbox_inner />
			<MAA_portrait />
			<MAA_name />
			<MAA_number_ro name="atk_bonus">
				<datasource>.atk_bonus</datasource>
				<anchored>
					<top parent="inneranchor" anchor="bottom" />
				</anchored>
			</MAA_number_ro>
			<MAA_number_label name="atk_bonus_label">
				<anchored to="atk_bonus" />
				<static textres="MAA_atk_bonus_label" />
			</MAA_number_label>
			<MAA_number name="qty_attackers">
				<datasource>.qty</datasource>
				<anchored>
					<top parent="atk_bonus" anchor="bottom" offset="4"/>
				</anchored>
			</MAA_number>
			<MAA_number_label name="qty_attackers_label">
				<anchored to="qty_attackers" />
				<static textres="MAA_qty_attackers_label" />
			</MAA_number_label>
		</sheetdata>
	</windowclass>

	<windowclass name="MAA_target">
		<sheetdata>
			<anchor_content_groupbox_top />
			<anchor_content_groupbox_bottom />
			<MAA_subtitle>
				<static textres="MAA_label_target" />
			</MAA_subtitle>
			<MAA_button_refresh />
			<MAA_groupbox_inner />
			<MAA_portrait />
			<MAA_name />
			<MAA_number_ro name="target_ac">
				<datasource>.target_ac</datasource>
				<anchored>
					<top parent="inneranchor" anchor="bottom" />
				</anchored>
			</MAA_number_ro>
			<MAA_number_label name="target_ac_label">
				<anchored to="target_ac" />
				<static textres="MAA_target_ac_label" />
			</MAA_number_label>
		</sheetdata>
	</windowclass>

</root>