<?xml version="1.0" encoding="iso-8859-1"?>
<root>

    <windowclass name="MAA">
        <frame>utilitybox</frame>
        <placement><size width="320" height="270" /></placement>
        <sheetdata>
            <windowtitlebar_utilitybox />
            <anchor_content_utilitybox_top />
            <MAA_subwindow name="MAA_target">
                <class>MAA_target</class>
                <anchored to="contentanchor" position="belowright" />
            </MAA_subwindow>
            <MAA_subwindow name="MAA_attacker">
                <class>MAA_attacker</class>
                <anchored to="contentanchor" position="belowleft" />
            </MAA_subwindow>
			<combobox name="MAA_attack_options">
				<anchored to="MAA_attacker">
                    <top anchor="bottom" />
                    <left offset="12" />
                    <size height="24" width="96" />
                </anchored>
				<default textres="ps_default_groupability" />
				<listdirection>up</listdirection>
				<listmaxsize>8</listmaxsize>
				<script>
					function onInit()
						super.onInit()
                        MAA.initAttackAction(self,window)
					end
                    function onValueChanged()
                        MAA.updateAttackBonus(self,window)
                    end
				</script>
			</combobox>
            <label name="label_qty_attackers">
				<anchored to="MAA_attacker">
                    <top anchor="bottom" />
                    <left parent="MAA_attack_options" anchor="right" offset="12"/>
                    <size height="24" width="24" />
                </anchored>
                <static textres="MAA_label_qty_attackers" />
                <activate />
                <right />
                <fastinit />
                <readonly />
            </label>
            <basicnumber name="qty_attackers">
				<anchored to="MAA_attacker">
                    <top anchor="bottom" />
                    <left parent="label_qty_attackers" anchor="right" offset="6" />
                    <size height="24" width="36" />
                </anchored>
                <active />
                <fastinit />
            </basicnumber>
            <button_dialog_roll>
				<anchored to="MAA_target">
                    <top anchor="bottom" />
                    <right offset="-12" />
                    <size height="24" width="36" />
                </anchored>
                <script>
                    function onButtonPress()
                        MAA.processRoll(self,window);
                    end
                </script>
            </button_dialog_roll>
        </sheetdata>
    </windowclass>

    <windowclass name="MAA_attacker">
        <sheetdata>
			<anchor_content_groupbox_top />
            <MAA_subheader>
                <static textres="MAA_attacker_header" />
            </MAA_subheader>
            <MAA_portrait />
            <MAA_name />
            <basicnumber name="atk_bonus">
                <anchored to="contentanchor">
                    <top relation="relative" offset="5" />
                    <right offset="-3"/>
                    <size height="24" width="36" />
                </anchored>
    			<displaysign />
                <active />
                <readonly />
                <fastinit />
            </basicnumber>
            <label name="label_atk_bonus">
                <anchored to="atk_bonus">
                    <top />
                    <right anchor="left" offset="-8" />
                    <size height="24" />
                </anchored>
                <static textres="MAA_label_atk_bonus" />
                <activate />
                <fastinit />
                <readonly />
            </label>
        </sheetdata>
    </windowclass>

    <windowclass name="MAA_target">
        <sheetdata>
			<anchor_content_groupbox_top />
            <MAA_subheader>
                <static textres="MAA_target_header" />
            </MAA_subheader>
            <MAA_portrait />
            <MAA_name />
            <basicnumber name="ac">
                <anchored to="contentanchor">
                    <top relation="relative" offset="5" />
                    <left offset="30" />
                    <size height="24" width="36" />
                </anchored>
                <active />
                <fastinit />
                <readonly />
                <datasource>.ac</datasource>
            </basicnumber>
            <label name="label_ac">
                <anchored to="ac">
                    <top />
                    <right anchor="left" offset="-8" />
                    <size height="24" />
                </anchored>
                <static textres="MAA_label_ac" />
                <activate />
                <fastinit />
                <readonly />
            </label>
        </sheetdata>
    </windowclass>


</root>